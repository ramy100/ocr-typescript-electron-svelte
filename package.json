{
  "name": "pdf-tools",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "ramy"
  },
  "description": "pdf tools for windows",
  "main": "electron/build/main.js",
  "homepage": "./",
  "scripts": {
    "build": "rollup -c",
    "svelte:dev": "rollup -c -w",
    "start": "sirv public --no-clear --single",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "concurrently --names \"watch,electron,svelte\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run watch:ts\" \"npm run electron:dev\"  \"npm run svelte:dev\"   ",
    "electron:dev": "electron  ./electron/build/main.js",
    "watch:ts": "tsc -p ./electron -w",
    "electron:prod": "electron-builder"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "electron": "13.1.2",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.34.1",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.7.3",
    "tslib": "^2.0.0",
    "concurrently": "^6.2.0",
    "sirv-cli": "^1.0.0",
    "node-sass": "^6.0.0",
    "electron-builder": "^22.10.5",
    "electron-reloader": "^1.2.1",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@electron/remote": "^1.1.0",
    "pdf-poppler": "^0.2.1",
    "svelte-spa-router": "^3.1.0",
    "tesseract.js": "^2.1.1"
  },
  "build": {
    "appId": "com.pdf-tools.app",
    "productName": "pdf tools",
    "directories": {
      "output": "out"
    },
    "target": "NSIS",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "win": {
      "requestedExecutionLevel": "requireAdministrator"
    }
  }
}
